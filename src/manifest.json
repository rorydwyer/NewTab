{
  "manifest_version": 2,
  "name": "# NewTab",
  "short_name": "NewTab",
  "description": "Replace your new tab with a productive and clean dashboard featuring a markdown editor, to do list, focus timer and inspiration.",
  "default_locale": "en",
  "permissions": ["https://*.unsplash.com/*", "storage", "unlimitedStorage"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hello@rory-dwyer.com",
      "strict_min_version": "42.0"
    }
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "# NewTab",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "override.html"
  },
  "offline_enabled": true
}
