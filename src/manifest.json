{
  "manifest_version": 2,
  "name": "# NewTab",
  "short_name": "NewTab",
  "version": "1.0",
  "description": "Replace new tab with a productive and clean dashboard featuring a markdown editor, to do list, focus timer and inspiration.",
  "default_locale": "en",
  "permissions": ["activeTab", "*://*/*", "storage", "unlimitedStorage"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "# NewTab",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "override.html"
  },
  "offline_enabled": true
}
